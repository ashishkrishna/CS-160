<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CommentActivity"
    android:background="@color/bgcolor"
   >

    <ImageView
        android:layout_width="101dp"
        android:layout_height="32dp"
        android:src = "@drawable/title"
        android:adjustViewBounds="true"
        android:layout_marginBottom="20px"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="50dp"
         />


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_centerVertical="true"

        >
        <ImageButton
            android:id="@+id/active_mode_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src = "@drawable/active_mode_icon"
            android:background="@null"
            android:layout_marginRight="10dp"
            android:adjustViewBounds="true"
            android:maxWidth="52dp"
            android:maxHeight="52dp"
            android:scaleType="fitCenter"
            android:layout_gravity="center_vertical" />

        <ImageButton
            android:id="@+id/passive_mode_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src = "@drawable/passive_mode_icon"
            android:background="@null"
            android:layout_marginRight="10dp"
            android:adjustViewBounds="true"
            android:maxWidth="52dp"
            android:maxHeight="52dp"
            android:scaleType="fitCenter"
            android:layout_gravity="center_vertical" />


        <ImageButton
            android:id="@+id/log_mode_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src = "@drawable/log_mode_icon"
            android:background="@null"
            android:adjustViewBounds="true"
            android:maxWidth="52dp"
            android:maxHeight="52dp"
            android:scaleType="fitCenter" />

    </LinearLayout>

    <TextView
        android:id = "@+id/mode_display"
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:layout_gravity="center_horizontal"
        android:textColor="@color/accentColor"
        android:gravity="center"
        android:layout_marginTop="15dp"
        android:textSize="18dp"
        />


</LinearLayout>
